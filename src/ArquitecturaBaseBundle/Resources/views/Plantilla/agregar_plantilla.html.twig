{% extends "ArquitecturaBaseBundle:Administracion:base_admin.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/codemirror/lib/codemirror.css') }}" type="text/css" />
{% endblock %}



{% block titulo %}Pruebas{% endblock %}

{% block cuerpo %}
    <div class="col-sm-12">
        <textarea id="codemirror_space" style="width: 100%; height: 400px;">

        </textarea>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/codemirror/lib/codemirror.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/codemirror/mode/twig/twig.js') }}" type="text/javascript"></script>
    <script type="text/javascript">
        CodeMirror.fromTextArea(document.getElementById("codemirror_space"), {
            lineNumbers: true,
            mode: ["twig","javascript", "html"]
        });
    </script>
{% endblock %}